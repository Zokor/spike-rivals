{
  "meta": {
    "name": "Ball and Effects Specifications",
    "version": "1.0.0",
    "description": "Pixel art specifications for volleyball and visual effects in Spike Rivals"
  },
  "ball": {
    "dimensions": {
      "size": { "width": 12, "height": 12 },
      "hitbox": { "radius": 6 }
    },
    "animations": {
      "rotation": {
        "frames": 8,
        "fps": 24,
        "description": "Full rotation cycle, speed increases with ball velocity"
      },
      "idle": {
        "frames": 1,
        "description": "Static ball when not in motion"
      }
    },
    "variants": [
      {
        "id": "default",
        "name": "Classic Volleyball",
        "rarity": "common",
        "palette": ["#ffffff", "#f5f5f5", "#e0e0e0", "#2c3e50"],
        "description": "Traditional white volleyball with blue/red panels"
      },
      {
        "id": "fire",
        "name": "Inferno Ball",
        "rarity": "epic",
        "palette": ["#ff6b35", "#f7931e", "#ffcc00", "#c0392b"],
        "description": "Flaming volleyball with fire trail",
        "hasTrailEffect": true,
        "trailColor": "#ff6b35"
      },
      {
        "id": "ice",
        "name": "Frost Sphere",
        "rarity": "epic",
        "palette": ["#a8e6cf", "#88d8b0", "#56c1c1", "#2980b9"],
        "description": "Frozen volleyball with ice crystal trail",
        "hasTrailEffect": true,
        "trailColor": "#88d8b0"
      },
      {
        "id": "rainbow",
        "name": "Prismatic Orb",
        "rarity": "legendary",
        "palette": ["#e74c3c", "#f39c12", "#f1c40f", "#2ecc71", "#3498db", "#9b59b6"],
        "description": "Color-shifting rainbow ball with sparkle trail",
        "hasTrailEffect": true,
        "trailColor": "rainbow"
      },
      {
        "id": "pixel",
        "name": "8-Bit Ball",
        "rarity": "rare",
        "palette": ["#00ff00", "#00cc00", "#009900", "#1a1a1a"],
        "description": "Retro green-screen styled ball"
      },
      {
        "id": "neon",
        "name": "Cyber Sphere",
        "rarity": "epic",
        "palette": ["#00f5d4", "#00bbf9", "#9b5de5", "#f15bb5"],
        "description": "Glowing cyberpunk ball with neon outline",
        "hasGlow": true,
        "glowColor": "#00f5d4"
      },
      {
        "id": "golden",
        "name": "Champion's Ball",
        "rarity": "legendary",
        "palette": ["#ffd700", "#ffb800", "#ff9500", "#b8860b"],
        "description": "Shimmering golden volleyball for champions",
        "hasGlow": true,
        "glowColor": "#ffd700"
      },
      {
        "id": "void",
        "name": "Dark Matter",
        "rarity": "legendary",
        "palette": ["#1a1a2e", "#16213e", "#0f3460", "#9b59b6"],
        "description": "Dark energy ball with purple particle trail",
        "hasTrailEffect": true,
        "trailColor": "#9b59b6"
      }
    ]
  },
  "effects": {
    "hit": {
      "name": "Hit Effect",
      "frames": 5,
      "fps": 20,
      "dimensions": { "width": 24, "height": 24 },
      "description": "Starburst impact when ball is hit",
      "variants": {
        "normal": { "color": "#ffffff" },
        "power": { "color": "#e74c3c", "scale": 1.5 },
        "perfect": { "color": "#f1c40f", "scale": 1.3, "particles": true }
      }
    },
    "trail": {
      "name": "Ball Trail",
      "segments": 5,
      "description": "Afterimage trail following ball movement",
      "opacityFalloff": [1.0, 0.7, 0.5, 0.3, 0.15],
      "scaleFalloff": [1.0, 0.9, 0.8, 0.7, 0.6]
    },
    "score": {
      "name": "Score Effect",
      "frames": 8,
      "fps": 15,
      "dimensions": { "width": 48, "height": 48 },
      "description": "Celebratory explosion when point is scored",
      "particles": {
        "count": 12,
        "types": ["star", "circle", "spark"],
        "spread": 360,
        "speed": { "min": 50, "max": 150 },
        "lifetime": 500
      }
    },
    "dust": {
      "name": "Landing Dust",
      "frames": 4,
      "fps": 12,
      "dimensions": { "width": 16, "height": 8 },
      "description": "Dust cloud when player lands on ground",
      "variants": {
        "sand": { "color": "#f4e4ba" },
        "concrete": { "color": "#95a5a6" },
        "metal": { "color": "#7f8c8d", "sparks": true }
      }
    },
    "jump": {
      "name": "Jump Effect",
      "frames": 3,
      "fps": 15,
      "dimensions": { "width": 20, "height": 12 },
      "description": "Ground impact lines when player jumps"
    },
    "glow": {
      "name": "Neon Glow",
      "description": "Ambient glow for cyberpunk theme",
      "layers": 3,
      "blur": [2, 4, 8],
      "opacity": [0.8, 0.5, 0.2],
      "colors": {
        "cyan": "#00f5d4",
        "magenta": "#f15bb5",
        "yellow": "#ffd700"
      }
    },
    "spark": {
      "name": "Electric Spark",
      "frames": 3,
      "fps": 20,
      "dimensions": { "width": 8, "height": 8 },
      "description": "Small spark effect for hits and impacts"
    }
  },
  "particles": {
    "spark": {
      "size": { "width": 2, "height": 2 },
      "colors": ["#ffffff", "#f1c40f", "#e74c3c"],
      "lifetime": { "min": 100, "max": 300 },
      "gravity": 200
    },
    "star": {
      "size": { "width": 3, "height": 3 },
      "colors": ["#f1c40f", "#f39c12", "#ffffff"],
      "lifetime": { "min": 200, "max": 500 },
      "rotation": true
    },
    "circle": {
      "size": { "width": 4, "height": 4 },
      "colors": ["#3498db", "#2ecc71", "#9b59b6"],
      "lifetime": { "min": 150, "max": 400 },
      "fadeOut": true
    },
    "rain": {
      "size": { "width": 1, "height": 4 },
      "colors": ["#3498db", "#5dade2", "#85c1e9"],
      "speed": { "y": 300 },
      "description": "For Neon District background"
    },
    "ember": {
      "size": { "width": 2, "height": 2 },
      "colors": ["#e74c3c", "#f39c12", "#f1c40f"],
      "lifetime": { "min": 300, "max": 800 },
      "floatUp": true,
      "description": "For Ancient Temple magical effects"
    },
    "snow": {
      "size": { "width": 2, "height": 2 },
      "colors": ["#ffffff", "#ecf0f1", "#bdc3c7"],
      "speed": { "y": 50 },
      "wobble": true
    },
    "confetti": {
      "size": { "width": 4, "height": 2 },
      "colors": ["#e74c3c", "#3498db", "#f1c40f", "#2ecc71", "#9b59b6"],
      "rotation": true,
      "description": "Victory celebration"
    }
  },
  "styleGuidelines": {
    "antialiasing": false,
    "transparency": true,
    "format": "PNG",
    "colorDepth": "32-bit RGBA"
  }
}
