{
  "name": "spike-rivals",
  "version": "0.1.0",
  "private": true,
  "description": "Competitive 2D volleyball game inspired by Arcade Volleyball (1987)",
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "bun run --parallel dev:client dev:server",
    "dev:client": "bun run --cwd client dev",
    "dev:server": "bun run --cwd server dev",
    "build": "bun run build:shared && bun run --parallel build:client build:server",
    "build:shared": "bun run --cwd shared build",
    "build:client": "bun run --cwd client build",
    "build:server": "bun run --cwd server build",
    "typecheck": "bun run --parallel typecheck:shared typecheck:client typecheck:server",
    "typecheck:shared": "bun run --cwd shared typecheck",
    "typecheck:client": "bun run --cwd client typecheck",
    "typecheck:server": "bun run --cwd server typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf node_modules client/node_modules server/node_modules shared/node_modules"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "typescript": "^5.9.3"
  }
}
